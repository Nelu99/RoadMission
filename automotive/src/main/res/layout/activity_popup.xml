<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:background="@color/silver"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/text_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="How many passengers do you have?"
            android:textColor="@color/gray"
            android:textSize="32sp" />

        <Spinner
            android:id="@+id/popup_spinner"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_popup"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/popup_checkbox"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            app:buttonTint="@color/gray"
            android:textColor="@color/gray"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/popup_spinner"
            android:text="Don't ask me again"/>

        <Button
            android:id="@+id/popup_button"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_checkbox"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:text="submit"
            android:onClick="onSubmit"
            android:textColor="@color/silver"
            android:textSize="32sp" />

    </RelativeLayout>

</RelativeLayout>